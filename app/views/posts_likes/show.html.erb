<div class="page-header">
  <h3>Posts Like #<%= @posts_like.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd>
        <% if @posts_like.user.present? %>
          <a href="/users/<%= @posts_like.user_id %>">
            <%= @posts_like.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>Post</dt>
      <dd>
        <% if @posts_like.post.present? %>
          <a href="/posts/<%= @posts_like.post_id %>">
            <%= @posts_like.post.created_at %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/posts_likes" class="btn btn-primary">
        Back
      </a>
      <a href="/posts_likes/<%= @posts_like.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_posts_like/<%= @posts_like.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
