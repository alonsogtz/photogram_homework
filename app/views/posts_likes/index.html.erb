<div class="page-header">
  <h1>
    Posts likes
    <a href="/posts_likes/new" class="btn btn-lg btn-success">New Posts like</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Post</th>
        <th>Actions</th>
      </tr>

      <% @posts_likes.each do |posts_like| %>
      <tr>
        <td><%= posts_like.user.email %></td>
        <td><%= posts_like.post.created_at %></td>
        <td>
          <a href="/posts_likes/<%= posts_like.id %>" class="btn btn-primary">Show</a>
          <a href="/posts_likes/<%= posts_like.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_posts_like/<%= posts_like.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @posts_likes, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
