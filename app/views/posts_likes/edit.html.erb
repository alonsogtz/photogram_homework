<!-- Validation failure messages -->
<% if @posts_like.errors.any? %>
  <% @posts_like.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Posts Like #<%= @posts_like.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_posts_like/<%= @posts_like.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @posts_like.user_id), :class => "form-control") %>
      </div>

      <!-- Label and input for post_id -->
      <div class="form-group">
        <label for="post_id" class="control-label">
          Post
        </label>

        <%= select_tag(:post_id, options_from_collection_for_select(Post.all, :id, :created_at, @posts_like.post_id), :class => "form-control") %>
      </div>

      <button class="btn btn-warning">
        Update Posts Like
      </button>
      or
      <a href="/posts_likes/<%= @posts_like.id %>">Cancel</a>
    </form>
  </div>
</div>
