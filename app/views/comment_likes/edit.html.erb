<!-- Validation failure messages -->
<% if @comment_like.errors.any? %>
  <% @comment_like.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Comment Like #<%= @comment_like.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_comment_like/<%= @comment_like.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @comment_like.user_id), :class => "form-control") %>
      </div>

      <!-- Label and input for comment_id -->
      <div class="form-group">
        <label for="comment_id" class="control-label">
          Comment
        </label>

        <%= select_tag(:comment_id, options_from_collection_for_select(Comment.all, :id, :post_id, @comment_like.comment_id), :class => "form-control") %>
      </div>

      <button class="btn btn-warning">
        Update Comment Like
      </button>
      or
      <a href="/comment_likes/<%= @comment_like.id %>">Cancel</a>
    </form>
  </div>
</div>
