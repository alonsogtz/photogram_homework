<div class="page-header">
  <h1>
    Comment likes
    <a href="/comment_likes/new" class="btn btn-lg btn-success">New Comment like</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Comment</th>
        <th>Actions</th>
      </tr>

      <% @comment_likes.each do |comment_like| %>
      <tr>
        <td>
          <% if comment_like.user.present? %>
            <a href="/users/<%= comment_like.user.id %>">
              <%= comment_like.user.email %>
            </a>
          <% end %>
        </td>
        <td>
          <% if comment_like.comment.present? %>
            <a href="/comments/<%= comment_like.comment.id %>">
              <%= comment_like.comment.post_id %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/comment_likes/<%= comment_like.id %>" class="btn btn-primary">Show</a>
          <a href="/comment_likes/<%= comment_like.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_comment_like/<%= comment_like.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @comment_likes, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
