<div class="page-header">
  <h3>Comment Like #<%= @comment_like.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd>
        <% if @comment_like.user.present? %>
          <a href="/users/<%= @comment_like.user_id %>">
            <%= @comment_like.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>Comment</dt>
      <dd>
        <% if @comment_like.comment.present? %>
          <a href="/comments/<%= @comment_like.comment_id %>">
            <%= @comment_like.comment.post_id %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/comment_likes" class="btn btn-primary">
        Back
      </a>
      <a href="/comment_likes/<%= @comment_like.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_comment_like/<%= @comment_like.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
